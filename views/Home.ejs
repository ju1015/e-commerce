<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome Page</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #667eea, #764ba2);
      overflow: hidden;
    }

    /* Bouncing balls background */
    .balls {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      overflow: hidden;
    }

    .ball {
      position: absolute;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.6);
      animation: bounce 5s infinite ease-in-out, moveX 8s infinite linear;
    }

    .ball:nth-child(2) {
      width: 25px;
      height: 25px;
      background: rgba(255, 255, 255, 0.4);
      animation-duration: 4s, 10s;
    }

    .ball:nth-child(3) {
      width: 50px;
      height: 50px;
      background: rgba(255, 255, 255, 0.7);
      animation-duration: 6s, 12s;
    }

    @keyframes bounce {
      0%, 100% { top: 0; }
      50% { top: calc(100vh - 60px); }
    }

    @keyframes moveX {
      0% { left: 0; }
      100% { left: calc(100vw - 60px); }
    }

    .container {
      text-align: center;
      background: #fff;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
      width: 350px;
      position: relative;
      z-index: 1;
    }

    h1 {
      margin-bottom: 1.5rem;
      color: #333;
      font-size: 1.8rem;
      white-space: nowrap;
      display: inline-block;
      animation: slide 6s infinite alternate linear;
    }

    @keyframes slide {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }

    .btn {
      display: block;
      width: 100%;
      margin: 0.5rem 0;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: 0.3s;
      animation: pulse 2s infinite;
    }

    .btn-login {
      background: #4CAF50;
      color: white;
      animation-delay: 0s; /* Login pulses first */
    }

    .btn-register {
      background: #2196F3;
      color: white;
      animation-delay: 1s; /* Register pulses second */
    }

    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.1); }
      100% { transform: scale(1); }
    }

    /* Hover effect */
    .btn:hover {
      transform: scale(1.15);
      box-shadow: 0 0 15px rgba(0,0,0,0.3);
    }
  </style>
</head>
<body>
  <!-- Bouncing balls background -->
  <div class="balls">
    <div class="ball"></div>
    <div class="ball"></div>
    <div class="ball"></div>
  </div>

  <!-- Main container -->
  <div class="container">
    <h1>Welcome To Our Page</h1>
    <button class="btn btn-login" onclick="window.location.href='/login'">Login</button>
    <button class="btn btn-register" onclick="window.location.href='/register'">Register</button>
  </div>
</body>
</html>
