<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Products - MyShop</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      color: #fff;
      background: linear-gradient(to bottom, #1e3c72, #2a5298); /* sky gradient */
      overflow-x: hidden;
      position: relative;
      min-height: 100vh;
    }

    /* Clouds container */
    .clouds {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      overflow: hidden;
      z-index: -1;
    }

    .cloud {
      position: absolute;
      background: #fff;
      border-radius: 50%;
      opacity: 0.7;
      filter: blur(2px);
    }

    .cloud::before,
    .cloud::after {
      content: "";
      position: absolute;
      background: #fff;
      border-radius: 50%;
      opacity: 0.7;
    }

    .cloud::before {
      width: 60%;
      height: 60%;
      top: -30%;
      left: -30%;
    }

    .cloud::after {
      width: 70%;
      height: 70%;
      top: -20%;
      right: -30%;
    }

    @keyframes floatUp {
      from { transform: translateY(0); }
      to { transform: translateY(-120vh); }
    }

    .products {
      padding: 2rem;
      position: relative;
      z-index: 1;
    }

    /* Wavy heading */
    .products h2 {
      text-align: center;
      margin-bottom: 1rem;
      font-size: 2.5rem;
      color: #ffc107;
      animation: wave 3s ease-in-out infinite;
      display: inline-block;
      width: 100%;
    }

    @keyframes wave {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(2deg); }
      50% { transform: rotate(-2deg); }
      75% { transform: rotate(1deg); }
    }

    .back-btn {
      display: block;
      margin: 0 auto 2rem auto;
      padding: 10px 18px;
      background: #6c757d;
      border: none;
      border-radius: 8px;
      color: #fff;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s, transform 0.3s;
    }

    .back-btn:hover {
      background: #5a6268;
      transform: scale(1.05);
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
    }

    .product-card {
      background: rgba(28, 28, 28, 0.9);
      border-radius: 12px;
      padding: 1rem;
      text-align: center;
      box-shadow: 0 4px 15px rgba(255,255,255,0.1);
      transition: transform 0.4s, box-shadow 0.4s;
      cursor: pointer;
      position: relative;
    }

    .product-card:hover {
      transform: translateY(-8px) scale(1.03);
      box-shadow: 0 10px 25px rgba(0,0,0,0.5);
    }

    .product-card img {
      width: 100%;
      max-height: 160px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 1rem;
    }

    .product-card h3 {
      margin-bottom: 0.5rem;
      font-size: 1.2rem;
      color: #ffc107;
    }

    .product-card p {
      margin-bottom: 1rem;
      color: #ccc;
      font-size: 1rem;
    }

    .product-card button {
      padding: 8px 14px;
      background: #28a745;
      border: none;
      border-radius: 8px;
      color: white;
      cursor: pointer;
      transition: 0.3s;
      font-size: 0.95rem;
    }

    .product-card button:hover {
      background: #218838;
      transform: scale(1.05);
    }

    a.card-link {
      text-decoration: none;
      color: inherit;
    }
  </style>
</head>
<body>

  <!-- Clouds -->
  <div class="clouds" id="cloud-container"></div>

  <div class="products">
    <h2>☁️ All Products ☁️</h2>

    <!-- Back to Home Button -->
    <form action="/profile">
      <button type="submit" class="back-btn">← Back to Home</button>
    </form>
    <% if (products.length > 0) { %>
      <div class="product-grid">
        <% products.forEach(product => { %>
          <a href="/product/<%= product._id %>" class="card-link">
            <div class="product-card">
              <img src="/uploads/<%= product.image %>" alt="<%= product.name %>">
              <h3><%= product.name %></h3>
              <p>$<%= product.price %></p>
              <form action="/cart/<%= product._id %>" method="POST">
                <button type="submit">Add to Cart</button>
              </form>
            </div>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <p style="text-align:center; color:#ccc; font-size:18px;">
        No products available right now. Please check back later!
      </p>
    <% } %>
  </div>

  <script>
    const cloudContainer = document.getElementById("cloud-container");

    function createCloud() {
      const cloud = document.createElement("div");
      cloud.classList.add("cloud");

      // Random size (small clouds)
      const size = Math.random() * 40 + 20; // 20px - 60px
      cloud.style.width = size + "px";
      cloud.style.height = size * 0.6 + "px";

      // Random horizontal position
      cloud.style.left = Math.random() * 95 + "%";

      // Start below screen
      cloud.style.top = "100vh";

      // Random speed (5s - 20s)
      const duration = Math.random() * 15 + 5;

      cloud.style.animation = `floatUp ${duration}s linear forwards`;

      // When finished, remove & respawn
      cloud.addEventListener("animationend", () => {
        cloud.remove();
        createCloud();
      });

      cloudContainer.appendChild(cloud);
    }

    // Spawn initial clouds
    for (let i = 0; i < 20; i++) {
      setTimeout(createCloud, i * 500);
    }
  </script>

</body>
</html>
